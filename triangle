    <script>
        let base = 10;
        let height = 5;
        let area = triangleArea(base, height);

         function triangleArea(base, height) {
         let area = (base * height) / 2;
          return area;
}
console.log(" The area of the triangle with base " + base + " and height " + height + " is " + area);
</script>
